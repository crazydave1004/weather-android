<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.superweather.ResultActivity">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="1"
        >
        <com.facebook.login.widget.LoginButton
            android:id="@+id/authButton"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp" />
        <TableRow android:layout_margin="10dp" >
            <Button android:id="@+id/detail_bt"
                android:text="MORE DETAILS"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:layout_width="0dp" />
            <Button android:id="@+id/map_bt"
                android:text="VIEW   MAP"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:layout_width="0dp" />
            <ImageButton android:id="@+id/fb_bt"
                android:padding="0dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:src="@drawable/fb_icon"/>
        </TableRow>
        <TableRow android:layout_margin="20dp" >
            <ImageView android:id="@+id/g_icon"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                />
        </TableRow>
        <TableRow android:layout_margin="20dp" >
            <TextView android:id="@+id/g_sum"
                android:textColor="#F50057"
                android:textSize="40sp"
                android:fontFamily="serif"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow android:layout_margin="20dp" >
            <TextView android:id="@+id/g_temp"
                android:textColor="#F50057"
                android:textSize="40sp"
                android:fontFamily="serif"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow android:layout_margin="20dp" >
            <TextView android:id="@+id/g_highlow"
                android:textColor="#F50057"
                android:textSize="30sp"
                android:fontFamily="serif"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow android:layout_margin="15dp" >
            <TextView android:id="@+id/g_prep_l"
                android:text="Precipitation"
                android:textColor="#304FFE"
                android:fontFamily="serif"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView android:id="@+id/g_prep"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:textColor="#304FFE"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow android:layout_margin="15dp" >
            <TextView android:id="@+id/g_rain_l"
                android:text="Chance of Rain"
                android:textColor="#304FFE"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView android:id="@+id/g_rain"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:textColor="#304FFE"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow android:layout_margin="15dp" >
            <TextView android:id="@+id/g_wind_l"
                android:text="Wind Speed"
                android:textColor="#304FFE"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView android:id="@+id/g_wind"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:textColor="#304FFE"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow android:layout_margin="15dp" >
            <TextView android:id="@+id/g_dew_l"
                android:text="Dew Point"
                android:textColor="#304FFE"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView android:id="@+id/g_dew"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:textColor="#304FFE"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow android:layout_margin="15dp" >
            <TextView android:id="@+id/g_hum_l"
                android:text="Humidity"
                android:textColor="#304FFE"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView android:id="@+id/g_hum"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:textColor="#304FFE"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow android:layout_margin="15dp" >
            <TextView android:id="@+id/g_vis_l"
                android:text="Visibility"
                android:textColor="#304FFE"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView android:id="@+id/g_vis"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:textColor="#304FFE"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow android:layout_margin="15dp" >
            <TextView android:id="@+id/g_rise_l"
                android:text="Sunrise"
                android:textColor="#304FFE"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView android:id="@+id/g_rise"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:textColor="#304FFE"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow android:layout_margin="15dp" >
            <TextView android:id="@+id/g_set_l"
                android:text="Sunset"
                android:textColor="#304FFE"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView android:id="@+id/g_set"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:textColor="#304FFE"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow android:layout_margin="5dp" >
            <TextView android:id="@+id/test1"
                android:textColor="#F50057"
                android:textSize="0sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>
</ScrollView>
