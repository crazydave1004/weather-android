<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/main"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">

    <TextView android:id="@+id/title"
        android:text="Forecast Search"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:shadowColor="@color/colorPrimary"
        android:shadowRadius="1.5"
        android:shadowDx="1.0"
        android:shadowDy="1.0"
        android:fontFamily="serif"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        />
    <TextView android:id="@+id/label_1"
        android:text="Street"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:shadowColor="@color/colorPrimary"
        android:shadowRadius="1.5"
        android:shadowDx="1.0"
        android:shadowDy="1.0"
        android:fontFamily="serif"
        android:paddingTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"/>
    <EditText android:id="@+id/text_1"
        android:textSize="15sp"
        android:fontFamily="serif"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/title"
        android:layout_toRightOf="@+id/label_1" />
    <TextView android:id="@+id/label_2"
        android:text="City"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:shadowColor="@color/colorPrimary"
        android:shadowRadius="1.5"
        android:shadowDx="1.0"
        android:shadowDy="1.0"
        android:fontFamily="serif"
        android:paddingTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_1"/>
    <EditText android:id="@+id/text_2"
        android:textSize="15sp"
        android:fontFamily="serif"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="127dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_1" />
    <TextView android:id="@+id/label_3"
        android:text="State"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:shadowColor="@color/colorPrimary"
        android:shadowRadius="1.5"
        android:shadowDx="1.0"
        android:shadowDy="1.0"
        android:fontFamily="serif"
        android:paddingTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_2"/>
    <Spinner android:id="@+id/state_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:entries="@array/states_array"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/text_2"
        android:layout_toRightOf="@+id/label_3" />
    <TextView android:id="@+id/label_4"
        android:text="Degree"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:shadowColor="@color/colorPrimary"
        android:shadowRadius="1.5"
        android:shadowDx="1.0"
        android:shadowDy="1.0"
        android:fontFamily="serif"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/state_spinner"/>
    <RadioGroup android:id="@+id/radio_degree"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/label_4"
        android:layout_below="@+id/state_spinner">
        <RadioButton android:id="@+id/f_radio"
            android:text="Fahrenheit"
            android:textSize="15sp"
            android:textColor="#FF4081"
            android:fontFamily="serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />
        <RadioButton android:id="@+id/c_radio"
            android:text="Celsius"
            android:textSize="15sp"
            android:textColor="#FF4081"
            android:fontFamily="serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>
    <Button android:id="@+id/button_send"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:fontFamily="serif"
        android:background="#3F51B5"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio_degree"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:text="Search" />
    <Button android:id="@+id/button_reset"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:fontFamily="serif"
        android:background="#3F51B5"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/button_send"
        android:layout_below="@+id/radio_degree"
        android:text="Clear"
        android:onClick="sendMessage" />
    <TextView android:id="@+id/formv_text"
        android:textSize="15sp"
        android:textColor="#FF4081"
        android:fontFamily="serif"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_send" />
    <TextView android:id="@+id/feedback_text"
        android:textSize="0sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/formv_text" />
    <TextView
        android:text="Powered by:"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:fontFamily="serif"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/feedback_text"/>
    <ImageView android:id="@+id/sponsor"
        android:src="@drawable/forecast_logo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/feedback_text"/>
    <Button android:id="@+id/button_about"
        android:textSize="11sp"
        android:textColor="#FFFFFF"
        android:fontFamily="serif"
        android:background="@drawable/roundbutton"
        android:padding="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/sponsor"
        android:layout_below="@+id/button_reset"
        android:text="About"
        android:onClick="sendMessage" />
</RelativeLayout>
